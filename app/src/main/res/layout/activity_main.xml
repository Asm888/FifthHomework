<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button android:layout_width="match_parent"
            android:text="Пользователи"
            android:id="@+id/button_user_activity"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="match_parent"
            android:text="Альбомы"
            android:id="@+id/button_albums_activity"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="match_parent"
            android:text="Фотографии"
            android:id="@+id/button_photos_activity"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="match_parent"
            android:text="Создать пост"
            android:id="@+id/button_create_post_dialog_fragment"
            android:layout_height="wrap_content"/>
</LinearLayout>